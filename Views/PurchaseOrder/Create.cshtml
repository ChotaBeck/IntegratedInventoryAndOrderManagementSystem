@model PurchaseOrder

@{
    ViewData["Title"] = "Create Purchase";
}

<h1>Create Purchase</h1>

<form asp-action="Add">
    <div class="form-group">
        <label asp-for="VendorId">Vendor:</label> 
        <select asp-for="VendorId" class="form-control" asp-items="ViewBag.VendorId"></select>
    </div>
    <div class="form-group">
        <label asp-for="OrderDate">Order Date:</label>
        <input asp-for="OrderDate" class="form-control" type="date"/> 
    </div>
    <div class="form-group">
        <label asp-for="StatusId">Status:</label>
        <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
    </div>
    <div class="form-group">
        <label asp-for="TotalCost">Total Cost:</label>
        <input asp-for="TotalCost" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
