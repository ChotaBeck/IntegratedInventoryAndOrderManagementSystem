@model PurchaseOrder

@{
    ViewData["Title"] = "Purchase Order Details";
}

<h2>Purchase Order Details</h2>

<div>
    <h4>PurchaseOrder</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Order Date
        </dt>
        <dd class="col-sm-10">
            @Model.OrderDate
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status.Name
        </dd>
        <dt class="col-sm-2">
            Total Cost
        </dt>
        <dd class="col-sm-10">
            @Model.TotalCost
        </dd>
    </dl>
</div>

<h4>Items</h4>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.PurchaseOrderItems)
    {
        <tr>
            <td>@item.Product.Name</td>
            <td>@item.Quantity</td>
            <td>@item.CostPrice</td>
            <td>@(item.Quantity * item.CostPrice)</td>
        </tr>
    }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>
