@model Shipment

@{
    ViewData["Title"] = "Create Shipment";
}

<h1>Create Shipment</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="SalesOrderId">Sales Order ID:</label> 
        <select asp-for="SalesOrderId" class="form-control" asp-items="ViewBag.SalesOrderId"></select> 
    </div>
    <div class="form-group">
        <label asp-for="ShippingDate">Shipping Date:</label>
        <input asp-for="ShippingDate" class="form-control" type="date"/> 
    </div>
    <div class="form-group">
        <label asp-for="TrackingNumber">Tracking Number:</label>
        <input asp-for="TrackingNumber" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
