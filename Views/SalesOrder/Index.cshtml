@model IEnumerable<SalesOrder>

@{
    ViewData["Title"] = "Sales Orders";
}

<h1>Sales Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer ID</th>
            <th>Order Date</th>
            <th>Status</th>
            <th>Paid?</th>
            <th>Total Cost</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.CustomerId</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@order.Status.Name</td> 
                <td>@order.isPaid</td>
                <td>@order.TotalCost</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-primary">Details</a> |
                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-secondary">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New Sales Order</a>
