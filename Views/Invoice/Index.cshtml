@model IEnumerable<Invoice>

@{
    ViewData["Title"] = "Invoices";
}

<h1>Invoices</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Invoice Number</th>
            <th>Date</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Due Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.InvoiceNumber)</td>
            <td>@Html.DisplayFor(modelItem => item.InvoiceDate)</td>
            <td>@Html.DisplayFor(modelItem => item.TotalAmount)</td>
            <td>@Html.DisplayFor(modelItem => item.Status)</td>
            <td>@Html.DisplayFor(modelItem => item.DueDate)</td>
            <td>
                @* <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a> *@
                <a asp-action="DownloadPdf" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Print Invoice</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>