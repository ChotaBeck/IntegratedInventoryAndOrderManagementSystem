@model Shipment

@{
    ViewData["Title"] = "Shipment Details";
}

<h1>Shipment Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Shipment ID:</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Sales Order ID:</dt>
        <dd class="col-sm-10">@Model.SalesOrderId</dd>
        <dt class="col-sm-2">Shipping Date:</dt>
        <dd class="col-sm-10">@Model.ShippingDate.ToString("yyyy-MM-dd")</dd> 
        <dt class="col-sm-2">Tracking Number:</dt>
        <dd class="col-sm-10">@Model.TrackingNumber</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a> |
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
