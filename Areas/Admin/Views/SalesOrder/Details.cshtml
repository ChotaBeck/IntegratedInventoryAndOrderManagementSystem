@model SalesOrder

<h1>Sales Order Details</h1>

<div>
    <h4>Sales Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Customer ID</dt>
        <dd class="col-sm-10">@Model.CustomerId</dd>

        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToString("d")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status.Name</dd>

        <dt class="col-sm-2">Is Paid</dt>
        <dd class="col-sm-10">@(Model.isPaid ? "Yes" : "No")</dd>

        <dt class="col-sm-2">Total Cost</dt>
        <dd class="col-sm-10">@Model.TotalCost.ToString("C")</dd>
    </dl>
</div>

<h4>Order Items</h4>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Selling Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SalesOrderItems)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.SellingPrice.ToString("C")</td>
                <td>@((item.Quantity * item.SellingPrice).ToString("C"))</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>