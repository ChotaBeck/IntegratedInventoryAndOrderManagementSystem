@model SalesOrderViewModel

<h1>Edit Sales Order</h1>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    
    <div class="form-group">
        <label asp-for="CustomerId" class="control-label"></label>
        <input asp-for="CustomerId" class="form-control" />
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="OrderDate" class="control-label"></label>
        <input asp-for="OrderDate" class="form-control" type="date" />
        <span asp-validation-for="OrderDate" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="StatusId" class="control-label"></label>
        <select asp-for="StatusId" class="form-control" asp-items="ViewBag.Statuses"></select>
        <span asp-validation-for="StatusId" class="text-danger"></span>
    </div>
    
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="isPaid" /> @Html.DisplayNameFor(model => model.isPaid)
        </label>
    </div>
    
    <h4>Order Items</h4>
    <div id="orderItems">
        @for (int i = 0; i < Model.SalesOrderItems.Count; i++)
        {
            <div class="order-item">
                <input type="hidden" asp-for="SalesOrderItems[i].Id" />
                <div class="form-group">
                    <label>Product</label>
                    <select asp-for="SalesOrderItems[i].ProductId" class="form-control" asp-items="ViewBag.Products"></select>
                </div>
                <div class="form-group">
                    <label>Quantity</label>
                    <input asp-for="SalesOrderItems[i].Quantity" class="form-control" type="number" />
                </div>
                <div class="form-group">
                    <label>Selling Price</label>
                    <input asp-for="SalesOrderItems[i].SellingPrice" class="form-control" type="number" step="0.01" />
                </div>
            </div>
        }
    </div>
    
    <button type="button" id="addItem" class="btn btn-secondary">Add Item</button>
    
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            var itemIndex = @Model.SalesOrderItems.Count;
            $("#addItem").click(function() {
                var newItem = `
                    <div class="order-item">
                        <div class="form-group">
                            <label>Product</label>
                            <select name="SalesOrderItems[${itemIndex}].ProductId" class="form-control">
                                @foreach (var item in ViewBag.Products)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Quantity</label>
                            <input name="SalesOrderItems[${itemIndex}].Quantity" class="form-control" type="number" />
                        </div>
                        <div class="form-group">
                            <label>Selling Price</label>
                            <input name="SalesOrderItems[${itemIndex}].SellingPrice" class="form-control" type="number" step="0.01" />
                        </div>
                    </div>
                `;
                $("#orderItems").append(newItem);
                itemIndex++;
            });
        });
    </script>
}