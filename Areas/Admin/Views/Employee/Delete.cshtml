@model Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h1>Delete Employee</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Employee ID:</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Phone Number:</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>
        <dt class="col-sm-2">Address:</dt>
        <dd class="col-sm-10">@Model.Address</dd>
        <dt class="col-sm-2">Position:</dt>
        <dd class="col-sm-10">@Model.Position</dd>
        <dt class="col-sm-2">Man Number:</dt>
        <dd class="col-sm-10">@Model.ManNumber</dd>
        <dt class="col-sm-2">Department:</dt>
        <dd class="col-sm-10">@Model.Department</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
