@model IEnumerable<PurchaseOrder>

@{
    ViewData["Title"] = "Purchases";
}

<h1>Purchases</h1>

<table class="table">
    <thead>
        <tr>
            <th>Purchase ID</th>
            <th>Vendor</th>
            <th>Order Date</th>
            <th>Status</th>
            <th>Total Cost</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var purchase in Model)
        {
            <tr>
                <td>@purchase.Id</td>
                <td>@purchase.Vendor.Name</td> 
                <td>@purchase.OrderDate.ToString("yyyy-MM-dd")</td> 
                <td>@purchase.Status.Name</td> 
                <td>@purchase.TotalCost</td>
                <td>
                    <a asp-action="Details" asp-route-id="@purchase.Id" class="btn btn-primary">Details</a> |
                    <a asp-action="Edit" asp-route-id="@purchase.Id" class="btn btn-secondary">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@purchase.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New Purchase</a>
